{
    "name": "custom-gai-client",
    "version": "1.0.0",
    "description": "Cross-platform gRPC desktop app with Electron + Python backend",
    "author": "Park Minje",
    "main": "main.js",
    "build": {
        "appId": "com.example.grpcdesktop",
        "productName": "custom-gai-client",
        "files": [
            "main.js",
            "preload.js",
            "frontend/dist/**/*"
        ],
        "extraResources": [
            {
                "from": "backend",
                "to": "backend",
                "filter": ["**/*.py"]
            },
            {
                "from": "backend/langgraph.proto",
                "to": "backend/langgraph.proto"
            }
        ],
        "win": {
            "target": "nsis",
            "extraResources": [
                {
                    "from": "backend",
                    "to": "backend",
                    "filter": ["**/*.py"]
                },
                {
                    "from": "backend/langgraph.proto",
                    "to": "backend/langgraph.proto"
                },
                {
                    "from": "runtimes/win32",
                    "to": "runtimes"
                }
            ]
        },
        "mac": {
            "target": "dmg",
            "extraResources": [
                {
                    "from": "backend",
                    "to": "backend",
                    "filter": ["**/*.py"]
                },
                {
                    "from": "backend/langgraph.proto",
                    "to": "backend/langgraph.proto"
                },
                {
                    "from": "runtimes/darwin-arm64",
                    "to": "runtimes"
                }
            ]
        }
    },
    "scripts": {
        "build": "electron-builder",
        "start": "electron .",
        "postinstall": "cd frontend && npm install",
        "build-frontend": "cd frontend && npm run build"
    },
    "dependencies": {
        "@grpc/grpc-js": "^1.13.4",
        "@grpc/proto-loader": "^0.7.15",
        "electron-is-dev": "3.0.1"
    },
    "devDependencies": {
        "electron": "^37.1.0",
        "electron-builder": "^26.0.12"
    }
}
